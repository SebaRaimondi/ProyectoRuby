<p id="notice"><%= notice %></p>

<h1>Courses</h1>

<table>
    <thead>
        <tr>
            <th>Anio</th>
            <th>Titulo</th>
            <th colspan="3">Acciones</th>
        </tr>
    </thead>

    <tbody>
        <% @courses.each do |course| %>
            <tr>
                <td><%= course.year %></td>
                <td><%= course.title %></td>
                <td><%= link_to 'Ver', course_path(course) %></td>
                <td><%= link_to 'Editar', edit_course_path(course) %></td>
                <td><%= link_to 'Eliminar', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<br>

<%= link_to 'New Course', new_course_path %>