<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Listado de Cursadas</h1>
        <br>
        <div class="col-md-10 col-md-offset-1">
            <div class="panel panel-default panel-table">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col col-xs-6">
                            <h3 class="panel-title">Cursadas</h3>
                        </div>
                        <div class="col col-xs-6 text-right">
                            <%= link_to "Nueva Cursada", new_course_path, class: "button" %>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <table class="table table-striped table-bordered table-list">
                        <thead>
                            <tr>
                                <th>
                                    <em class="fa fa-cog"></em>
                                </th>
                                <th>Anio</th>
                                <th>Titulo</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @courses.each do |course| %>
                                <tr>
                                    <td align="center">
                                        <%= link_to '<em class="fa fa-eye"></em>'.html_safe, course_path(course), class: "btn btn-default" %>
                                        <%= link_to '<em class="fa fa-pencil"></em>'.html_safe, edit_course_path(course), class: "btn btn-default" %>
                                        <%= link_to '<em class="fa fa-trash"></em>'.html_safe, course_path(course), method: :delete, data: { confirm: "Estas seguro de eliminar el curso #{course.full_title}?" }, class: "btn btn-danger" %>
                                    </td>
                                    <td><%= course.year %></td>
                                    <td><%= course.title %></td>
                                </tr>
                            <% end %>
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>