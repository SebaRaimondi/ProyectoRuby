<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.min.css" rel='stylesheet' type='text/css'>

<br>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;"><%= ("Listado de examenes de la cursada " + @course.year.to_s).html_safe %></h1>

        <div class="col-md-10 col-md-offset-1">
            <div class="panel panel-default panel-table">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col col-xs-6">
                            <h3 class="panel-title">Alumnos</h3>
                        </div>
                        <div class="col col-xs-6 text-right">
                            <%= link_to '<button type="button" class="button">Nuevo Alumno</button>'.html_safe, new_course_student_path %>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <table class="table table-striped table-bordered table-list">
                        <thead>
                            <tr>
                                <th>
                                    <em class="fa fa-cog"></em>
                                </th>
                                <th>Alumno</th>
                                <th>DNI</th>
                                <th>Legajo</th>
                                <th>Email</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @students.each do |s| %>
                                <tr>
                                    <td align="center">
                                        <%= link_to '<em class="fa fa-pencil"></em>'.html_safe, edit_course_student_path(s.course, s), class: "btn btn-default" %>
                                        <%= link_to '<em class="fa fa-trash"></em>'.html_safe, [s.course, s], data: { confirm: "Estas seguro de eliminar el alumno #{s.full_name}?" }, :method => :delete, class: "btn btn-danger" %>
                                    </td>
                                    <td><%= s.full_name %></td>
                                    <td><%= s.dni %></td>
                                    <td><%= s.number %></td>
                                    <td><%= s.email %></td>
                                </tr>
                            <% end %>
                        </tbody>
                    </table>

                </div>
            </div>
            <%= link_to "Volver a Cursada", course_path(params[:course_id]), class: "button btn-red" %>
        </div>
    </div>
</div>