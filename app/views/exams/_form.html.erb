<div class="authform" style="max-width: 500px;">
    <%= form_for([@exam.course, @exam]) do |f| %>
    <h2>
        <%= @title %>
    </h2>
    <hr>
    <br>
    <% if @exam.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@exam.errors.count, "error") %>
                prohibited this exam from being saved:</h2>

            <ul>
                <% @exam.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, :autofocus => true, class: 'form-control' %>
    </div>
    <div class="form-group">
        <%= f.label :date %>
        <%= f.date_select :date, class: 'form-control', discard_year: true %>
    </div>
    <div class="form-group">
        <%= f.label :min %>
        <%= f.number_field :min, class: 'form-control' %>
    </div>
    <br>
    <%= link_to '<button type="button" class="button btn-red">Volver a Examenes</button>'.html_safe, course_exams_path %>
    <%= f.submit 'Confirmar', :class => 'button right' %>
<% end %>
</div>