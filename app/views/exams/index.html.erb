<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.min.css" rel='stylesheet' type='text/css'>

<br>
<div class="container">
    <div class="row">

        <p></p>
        <h1 style="text-align: center;"><%= ("Listado de examenes de la cursada " + @course.year.to_s).html_safe %></h1>

        <br>

        <div class="col-md-10 col-md-offset-1">

            <div class="panel panel-default panel-table">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col col-xs-6">
                            <h3 class="panel-title">Examenes</h3>
                        </div>
                        <div class="col col-xs-6 text-right">
                            <%= link_to '<button type="button" class="btn btn-sm btn-primary btn-create">Nuevo Examen</button>'.html_safe, new_course_exam_path %>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <table class="table table-striped table-bordered table-list">
                        <thead>
                            <tr>
                                <th>
                                    <em class="fa fa-cog"></em>
                                </th>
                                <th class="hidden-xs">ID</th>
                                <th>Titulo</th>
                                <th>Fecha</th>
                                <th>Minimo</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @exams.each do |exam| %>
                                <tr>
                                    <td align="center">
                                        <%= link_to '<em class="fa fa-eye"></em>'.html_safe, [exam.course, exam], class: "btn btn-default" %>
                                        <%= link_to '<em class="fa fa-pencil"></em>'.html_safe, edit_course_exam_path(exam.course, exam), class: "btn btn-default" %>
                                        <%= link_to '<em class="fa fa-trash"></em>'.html_safe, [exam.course, exam], :confirm => 'Are you sure?', :method => :delete, class: "btn btn-danger" %>
                                    </td>
                                    <td class="hidden-xs"><%= exam.id %></td>
                                    <td><%= exam.title %></td>
                                    <td><%= exam.date %></td>
                                    <td><%= exam.min %></td>
                                </tr>
                            <% end %>
                        </tbody>
                    </table>

                </div>
            </div>
            <%= link_to '<button type="button" class="btn btn-sm btn-primary btn-create btn-red">Volver a Cursadas</button>'.html_safe, courses_path(params[:course_id]) %>
        </div>
    </div>
</div>